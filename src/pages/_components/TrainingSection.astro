---
import { GraduationCap } from '@/components/icons/GraduationCap'
import Link from '@/components/Link'
---

<section class='my-16 sm:my-24'>
  <div
    class:list={[
      'relative overflow-hidden rounded-2xl',
      'border border-zinc-700/50',
      'bg-gradient-to-br from-blue-950/30 via-purple-950/20 to-zinc-900/30',
      'p-8 sm:p-12'
    ]}
  >
    <!-- Background decoration -->
    <div
      class='absolute -right-12 -top-12 size-48 rounded-full bg-blue-500/10 blur-3xl'
    >
    </div>
    <div
      class='absolute -bottom-12 -left-12 size-48 rounded-full bg-purple-500/10 blur-3xl'
    >
    </div>

    <!-- Content -->
    <div class='relative z-10 flex flex-col items-start gap-6 sm:flex-row sm:items-center sm:justify-between'>
      <div class='flex-1 space-y-4'>
        <div class='flex items-center gap-3'>
          <div class='rounded-full bg-blue-500/20 p-3'>
            <GraduationCap className='size-6 text-blue-400' />
          </div>
          <div
            class='rounded-full border border-green-600/30 bg-green-900/20 px-3 py-1 text-xs font-medium text-green-300'
          >
            New
          </div>
        </div>
        
        <div>
          <h2 class='text-2xl font-bold text-white sm:text-3xl'>
            DevOps Live Training
          </h2>
          <p class='mt-2 text-zinc-300 sm:text-lg'>
            Master DevOps practices with hands-on live sessions. Learn from industry experts with real-world projects.
          </p>
        </div>

        <div class='flex flex-wrap items-center gap-4 text-sm text-zinc-400'>
          <div class='flex items-center gap-2'>
            <div class='size-2 rounded-full bg-green-400'></div>
            <span>Live Sessions</span>
          </div>
          <div class='flex items-center gap-2'>
            <div class='size-2 rounded-full bg-blue-400'></div>
            <span>Expert Mentorship</span>
          </div>
          <div class='flex items-center gap-2'>
            <div class='size-2 rounded-full bg-purple-400'></div>
            <span>₹500/hour</span>
          </div>
        </div>
      </div>

      <div class='flex flex-col gap-3 sm:flex-shrink-0'>
        <Link
          href='/training'
          class:list={[
            'inline-flex items-center justify-center gap-2',
            'rounded-lg bg-gradient-to-r from-blue-600 to-purple-600',
            'px-6 py-3 font-semibold text-white',
            'transition-all hover:from-blue-700 hover:to-purple-700',
            'hover:shadow-lg hover:shadow-blue-500/25',
            'focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-500'
          ]}
        >
          <span>Book Training</span>
          <svg
            class='size-4'
            fill='none'
            stroke='currentColor'
            viewBox='0 0 24 24'
          >
            <path
              stroke-linecap='round'
              stroke-linejoin='round'
              stroke-width='2'
              d='M13 7l5 5m0 0l-5 5m5-5H6'></path>
          </svg>
        </Link>
        <p class='text-center text-xs text-zinc-500'>
          Flexible scheduling • Certificate included
        </p>
      </div>
    </div>
  </div>
</section>
