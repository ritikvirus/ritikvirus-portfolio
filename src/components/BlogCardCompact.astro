---
import type { CollectionEntry } from 'astro:content'

import Image from '@/components/Image'
import Link from '@/components/Link'

interface Props extends CollectionEntry<'blog'> {}

const {
  id: slug,
  data: { heroImage, title, pubDate, description }
} = Astro.props
---

<li class='w-[280px] shrink-0'>
  <Link href={`/blog/${slug}`} class='group block no-underline'>
    <Image
      src={heroImage}
      alt={title}
      title={title}
      align='center'
      class='aspect-[1.7] w-full rounded-md transition-transform duration-500 group-hover:scale-[1.02]'
      inferSize
      ambientMode
    />
    <h3 class='mt-3 line-clamp-2 text-[15px] font-semibold leading-snug text-zinc-100'>
      {title}
    </h3>
    <p class='mt-1 line-clamp-2 text-xs text-zinc-400'>{description}</p>
  </Link>
</li>
